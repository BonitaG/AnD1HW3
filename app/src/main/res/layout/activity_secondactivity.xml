<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/result_field"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Result"
        android:textSize="30sp"
        android:gravity="left"
        android:textColor="#0335DA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="20dp"
        android:textColor="#EE004F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        android:onClick="onClick"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="20dp"
        android:textColor="#EE0014"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        android:onClick="share"
        tools:ignore="OnClick" />



















</androidx.constraintlayout.widget.ConstraintLayout>